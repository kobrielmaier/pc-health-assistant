{
  "name": "pc-health-assistant",
  "version": "0.1.5",
  "description": "AI-powered computer health diagnostics and repair assistant",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "electron .",
    "build": "vite build && electron-builder && node scripts/post-build.js",
    "build:publish": "vite build && electron-builder --publish always && node scripts/post-build.js",
    "test": "jest"
  },
  "keywords": [
    "electron",
    "ai",
    "computer-repair",
    "diagnostics",
    "tech-support"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.69.0",
    "@sentry/electron": "^7.3.0",
    "dotenv": "^17.2.3",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^35.7.5",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "rcedit": "^5.0.2",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.pc-health-assistant",
    "productName": "PC Health Assistant",
    "files": [
      "src/**/*",
      "build/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "requestedExecutionLevel": "requireAdministrator",
      "signAndEditExecutable": false
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.utilities",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "artifactName": "${productName}-${version}-${arch}.dmg"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "${productName}-Setup-${version}.exe",
      "perMachine": true,
      "allowElevation": true,
      "runAfterFinish": true
    },
    "publish": {
      "provider": "github",
      "owner": "kobrielmaier",
      "repo": "pc-health-assistant",
      "releaseType": "release"
    },
    "extraResources": [
      {
        "from": ".env",
        "to": ".env"
      }
    ]
  }
}
